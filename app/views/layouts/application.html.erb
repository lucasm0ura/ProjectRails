<!DOCTYPE html>
<html>
<head>
  <title>ProjectRails</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="description" content="">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="Default">
  <meta name="viewport" content="width=device-width, initial-scale=1">  
</head>
<body class="dashboard">
    <div role="navigation" class="navbar navbar-fixed-top navbar-app">
      <div class="container-fluid">
        <div class="navbar-header">
          <button data-target="#main-menu" data-toggle="collapse" type="button" class="navbar-toggle collapsed"><span class="sr-only">Show/hide navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
          <button type="button" class="navbar-trigger sb-toggle-left"><span></span><span></span><span></span><span></span></button>
          <%= link_to root_url, class: "navbar-brand" do %>
            <img src="/assets/lsm_system.png" alt="Reckitt">
          <% end %>
        </div>
        <div id="main-menu" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown"><a data-toggle="dropdown" href="#" aria-expanded="false" role="button" class="dropdown-toggle navbar-nav-user"><strong><%= current_user.try(:name) %></strong><span>online</span><i class="icon-arrow-down"></i></a>
              <ul role="menu" class="dropdown-menu">
                <li><li><%= link_to t("menu.logout"), destroy_user_session_path, :method => :delete %>  </li></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

<%= yield %>

    <div class="sb-slidebar sb-left sb-style-push">
      <div class="aside aside-left">
        <div class="aside-section">

          <% if can? :index, :dashboard %>
            <%= link_to dashboard_index_path, class: 'aside-link' do %>
              <i class="glyphicon glyphicon-home" style="margin-top: -14px; font-size: 22px;"></i>DASHBOARD</a></a>
            <% end %>
          <% end %>

        </div>
        <div class="aside-section">

          <% if can? :index, :client %>
            <%= link_to clients_path, class: 'aside-link' do %>
              <i class="glyphicon glyphicon-user" style="margin-top: -14px; font-size: 22px;"></i>CLIENTES</a></a>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>

   <div role="navigation" class="navbar navbar-fixed-bottom navbar-app">
     
   </div>

</body>
</html>

